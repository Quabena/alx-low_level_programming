#include "main.h"

/**
* string_toupper - A C function that converts all lowercase letters 
* of a string to uppercase
* @str: Pointer to the string to convert
* Return: Pointer to the uppercase string
*/

char *string_toupper(char *str)
{
int i = 0;

while (str[i] != '\0')
{
if (str[i] >= 'a' && str[i] <= 'z')
{
str[i] = str[i] - ('a' - 'A');
}
i++;
}

return (str);
}
